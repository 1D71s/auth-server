generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String  @id @default(uuid())
  name        String
  email       String  @unique
  password    String?
  description String  @default("")

  role     Role      @default(USER)
  provider Provider?

  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  sessions    Token[]
  bans        Bans[]   @relation("Bans_User")
  bansAsAdmin Bans[]   @relation("Bans_Admin")

  @@map("users")
}

model Token {
  token     String   @unique
  exp       DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  UserAgent String   @map("user_agent")

  @@map("tokens")
}

model Bans {
  banId       String   @id @default(uuid())
  user        User     @relation(name: "Bans_User", fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  admin       User     @relation(name: "Bans_Admin", fields: [adminId], references: [id], onDelete: Cascade)
  adminId     String
  description String
  startBan    DateTime @default(now())
  endBan      DateTime

  @@map("bans")
}

enum Role {
  MOOD
  ADMIN
  MODER
  USER
}

enum Provider {
  GOOGLE
}
